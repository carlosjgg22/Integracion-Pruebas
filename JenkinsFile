pipeline {
	agent any
	tools{
	maven 'Maven 3.6.3'
	jdk 'jdk8'
	
	} 

	stages{
		stage('Fase de CompilaciÃ³n'){
		    steps{
		     bat 'mvn compile'		
		        }		
		    }	

       stage('Fase de Pruebas'){
		    steps{
		     bat 'mvn test'		
		    }
		    
		    post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
	    }	

       stage('Deploy Stage'){
		    steps{
		     bat 'mvn deploy'		
		        }		
		    }
	    }	
}